import json
import os

class Settings:
    def __init__(self):
        self.MICROSOFT_APP_ID = os.getenv("MICROSOFT_APP_ID")
        self.MICROSOFT_APP_PASSWORD = os.getenv("MICROSOFT_APP_PASSWORD")

        self.FOUNDRY_ENDPOINT = os.getenv("FOUNDRY_ENDPOINT")
        self.FOUNDRY_API_KEY = os.getenv("FOUNDRY_API_KEY")
        self.FOUNDRY_ASSISTANT_ID = os.getenv("FOUNDRY_ASSISTANT_ID")

        self.GLPI_URL = os.getenv("GLPI_URL")
        self.GLPI_TOKEN = os.getenv("GLPI_TOKEN")
